<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="12dp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="100dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_65sdp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_44sdp"
            android:layout_marginTop="@dimen/_11sdp"
            android:layout_height="@dimen/_44sdp"
            android:padding="6dp"
            android:src="@drawable/ic_twotone_add_business_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_new_address"
                android:textColor="#595B5E"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_22sdp"
                android:textStyle="bold" />
    </LinearLayout>



    <EditText
        android:id="@+id/et_addNewAddress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_85sdp"
        android:layout_margin="16dp"
         android:hint="@string/add_new_address"
        android:textSize="@dimen/_12sdp"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingTop="@dimen/_8sdp"
        android:gravity="top"
        android:background="@drawable/gray_roundbtn"
         android:textColor="@color/font_color" />
     <androidx.appcompat.widget.AppCompatButton
         android:id="@+id/btn_bottomAddAddress"
        android:layout_width="@dimen/_190sdp"
         android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:background="@drawable/btn_shape"
        android:text="Add Address"
        android:textAllCaps="false"
        android:textSize="@dimen/_12sdp"
        android:textColor="#fff" />

</LinearLayout>