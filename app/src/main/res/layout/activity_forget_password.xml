<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_blue"
        tools:context=".SigninActivity">

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@+id/emailtext"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:background="@drawable/edit_text_design"
            android:hint="example@gmail.com"
            android:inputType="textEmailAddress"
            android:paddingLeft="@dimen/_16sdp" />


        <ImageView
            android:id="@+id/bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ResetYourPassword"
            android:src="@drawable/greenleaves" />

        <ImageView
            android:id="@+id/bg1"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_76sdp"
            android:layout_below="@+id/btn_Confirm"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_53sdp"
            android:rotation="180"
            android:src="@drawable/greenleaves" />

        <TextView
            android:id="@+id/tv_ResetYourPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="@string/reset_your_password"
            android:textColor="@color/black"
            android:textSize="@dimen/_18ssp" />

        <TextView
            android:id="@+id/emailtext"
            android:layout_width="39dp"
            android:layout_height="18dp"
            android:layout_below="@+id/bg"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_29sdp"
            android:text="Email"
            android:textColor="@color/font_color"
            android:textSize="@dimen/_11sdp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_Confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@+id/email"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_89sdp"
            android:background="@drawable/btn_shape"
            android:text="Confirm "
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />


     </RelativeLayout>
</ScrollView>
